---
interface Props {
    nomMaison: string;
    adresse: string;
    nbChambres: number;
    nbSdb: number;
    surface: number;
    prix: number;
    favori?: boolean;
    imgUrl?: string;
}

const { nomMaison, adresse, nbChambres, nbSdb, surface, prix, favori, imgUrl } =
    Astro.props;
---

<div
    class="offre bg-white shadow-md rounded-lg p-4 hover:shadow-lg transition-shadow"
    data-favori={favori?.toString()}
>
    <h2 class="text-xl font-semibold text-gray-800">
        {nomMaison}
    </h2>
    <p class="text-gray-600 text-sm mt-1">
        {adresse}
    </p>
    <div class="flex items-center gap-4 mt-3 text-sm text-gray-700">
        <span>{nbChambres} chambres</span>
        <span>{nbSdb} sdb</span>
        <span>{surface} m²</span>
    </div>
    <p class="text-2xl font-bold text-blue-600 mt-3">
        {prix}€
    </p>
</div>
