---
import { getImageUrl } from "../backend.mjs";
import { Image } from "astro:assets";

const { record, recordImage } = Astro.props;

const imageURL = await getImageUrl(record, recordImage);
---

{
    imageURL && (
        <Image
            src={imageURL}
            alt={record.nom_maison || "images"}
            inferSize={true}
        />
    )
}
